<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:background="#fff"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/matchingImage"
        android:layout_width="77dp"
        android:layout_height="71dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="15dp"
        android:src="@drawable/ic_people" />

    <TextView
        android:id="@+id/itemNameTv"
        android:layout_width="131dp"
        android:layout_height="42dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/matchingImage"
        android:layout_marginEnd="127dp"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/departureDate"
        android:layout_width="77dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/matchingImage"
        android:layout_alignStart="@+id/itemNameTv"
        android:textSize="12sp" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/departureDate"
        android:layout_toEndOf="@+id/departureDate"
        app:srcCompat="@drawable/ic_array_black" />

    <TextView
        android:id="@+id/homecomingDate"
        android:layout_width="77dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/matchingImage"
        android:layout_toEndOf="@+id/imageView2"
        android:textSize="12sp" />
</RelativeLayout>
