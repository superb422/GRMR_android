<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_login1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">


    <ImageView
        android:id="@+id/main_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="196dp"
        app:srcCompat="@drawable/ic_main" />

    <ImageView
        android:layout_width="10dp"
        android:layout_height="18dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="329dp"
        app:srcCompat="@drawable/ic_comma" />

    <ImageView
        android:layout_width="10dp"
        android:layout_height="18dp"
        android:layout_alignBottom="@+id/main_icon"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="13dp"
        android:layout_marginRight="90dp"
        app:srcCompat="@drawable/ic_dot" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="84dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="104dp"
        android:layout_marginLeft="67dp"
        android:layout_marginRight="67dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/fbLoginButton"
                android:layout_width="58dp"
                android:layout_height="58dp"
                app:srcCompat="@drawable/facebook_icon" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="페이스북"
                android:textColor="#4a4a4a" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/kkLoginButton"
                android:layout_width="58dp"
                android:layout_height="58dp"
                app:srcCompat="@drawable/ic_oval" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="네이버"
                android:textColor="#4a4a4a" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/emailLoginButton"
                android:layout_width="58dp"
                android:layout_height="58dp"
                app:srcCompat="@drawable/ic_grmr" />

            <TextView
                android:id="@+id/textView18"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="갈래말래"
                android:textColor="#4a4a4a" />
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/textView19"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="56dp"
        android:layout_marginLeft="60dp"
        android:text="아직 회원이 아니신가요?"
        android:textColor="#575757"
        app:fontFamily="serif" />

    <TextView
        android:id="@+id/registerButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/textView19"
        android:layout_marginRight="60dp"
        android:text="@string/membership"
        android:textColor="#517ae4" />

    <View
        android:id="@+id/view7"
        android:layout_width="79dp"
        android:layout_height="1dp"
        android:layout_alignStart="@+id/registerButton"
        android:layout_below="@+id/textView19"
        android:layout_marginTop="-58dp"
        android:background="#517ae4" />

    <ImageView
        android:layout_width="23dp"
        android:layout_height="21.1dp"
        android:layout_alignParentBottom="true"

        android:layout_centerHorizontal="true"
        android:layout_marginBottom="147dp"
        android:gravity="center"
        app:srcCompat="@drawable/ic_kakao" />

</RelativeLayout>