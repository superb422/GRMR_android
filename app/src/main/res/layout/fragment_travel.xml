<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/MainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background=" #f8f8f8"
    android:foregroundGravity="center">


    <LinearLayout
        android:id="@+id/scrollDot"
        android:layout_width="52dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="2dp"
        android:gravity="top|center"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout5">

        <ImageView
            android:id="@+id/dot_on"
            android:layout_width="13dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:srcCompat="@drawable/ic_dot_on_blue"
            tools:layout_editor_absoluteX="128dp"
            tools:layout_editor_absoluteY="152dp" />

        <ImageView
            android:id="@+id/dot_off1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:srcCompat="@drawable/ic_off_dot"
            tools:layout_editor_absoluteX="28dp"
            tools:layout_editor_absoluteY="152dp" />

        <ImageView
            android:id="@+id/dot_off2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:srcCompat="@drawable/ic_off_dot"
            tools:layout_editor_absoluteX="28dp"
            tools:layout_editor_absoluteY="152dp" />

        <ImageView
            android:id="@+id/dot_off3"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:srcCompat="@drawable/ic_off_dot"
            tools:layout_editor_absoluteX="28dp"
            tools:layout_editor_absoluteY="152dp" />

        <ImageView
            android:id="@+id/dot_off4"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:srcCompat="@drawable/ic_off_dot"
            tools:layout_editor_absoluteX="28dp"
            tools:layout_editor_absoluteY="152dp" />
    </LinearLayout>

    <Button
        android:id="@+id/addTravelButton"
        android:layout_width="388dp"
        android:layout_height="45dp"
        android:layout_marginStart="8dp"
        android:background="#92b6d5  "
        android:text="여행을 등록하세요. +"
        android:textColor="@color/colorWhite"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout5"
        android:layout_width="389dp"
        android:layout_height="123dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="match_parent"
            android:layout_height="129dp"
            app:srcCompat="@drawable/title_1" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/VerticalLayout"
        android:layout_width="match_parent"
        android:layout_height="11dp"
        android:layout_marginBottom="672dp"
        android:background="#f8f8f8"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp" />

    <Button
        android:id="@+id/LogoutButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:text="Logout"
        app:layout_constraintBottom_toTopOf="@+id/scrollDot"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="@+id/linearLayout5"
        app:layout_constraintTop_toTopOf="@+id/linearLayout5" />

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="368dp"
        android:layout_height="308dp"
        app:layout_constraintBottom_toTopOf="@+id/addTravelButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scrollDot"
        app:layout_constraintVertical_bias="0.441"
        tools:context=".ui.MainActivity2">

        <android.support.v7.widget.RecyclerView

            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></android.support.v7.widget.RecyclerView>


    </RelativeLayout>


</android.support.constraint.ConstraintLayout>