<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff"
    tools:context=".Login.Activity.pwfind">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp">

        <RelativeLayout
            android:id="@+id/email_back"
            android:layout_width="22dp"
            android:layout_height="31dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_backbtn" />
        </RelativeLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/pw_text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="30dp"
        android:text="비밀번호를 잊으셨나요?"
        android:textColor="#000000"
        android:textSize="24dp" />

    <TextView
        android:id="@+id/pw_text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="30dp"
        android:text="비밀번호를 재설정하기 위해\nSumwhere에 가입한 이메일을 입력해주세요."
        android:textColor="#000000"
        android:textSize="13.5dp" />

    <com.example.dongh.grmr.Login.ExtensionEditText
        android:id="@+id/pw_find_email"
        android:layout_width="280dp"
        android:layout_height="53dp"
        android:layout_gravity="center"
        android:layout_marginTop="35dp"
        android:drawableRight="@drawable/empty"
        android:ems="10"
        android:hint="이메일 주소"
        android:inputType="textPersonName"
        android:textColorHint="#dcdcdc"
        android:textSize="16dp"
        android:theme="@style/EditTextStyle" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <ImageView
            android:id="@+id/pwfind_check"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            app:srcCompat="@drawable/ic_select_btn" />

        <TextView
            android:id="@+id/pw_check_btn"
            android:layout_width="280dp"
            android:layout_height="wrap_content"

            android:layout_alignBottom="@id/pwfind_check"
            android:layout_alignLeft="@id/pwfind_check"
            android:layout_alignRight="@id/pwfind_check"
            android:layout_alignTop="@id/pwfind_check"
            android:gravity="center"

            android:text="확인"
            android:textColor="#979797"
            android:textSize="16dp" />
    </RelativeLayout>

</LinearLayout>